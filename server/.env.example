# Sales Coach RAG Server - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE SETTINGS
# ===========================================

# Database provider: "postgresql" or "supabase"
DB_PROVIDER=postgresql

# PostgreSQL local settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=salescoach_rag
DB_USER=postgres
DB_PASSWORD=postgres

# Supabase cloud settings (if using supabase provider)
SUPABASE_URL=
SUPABASE_KEY=

# ===========================================
# EMBEDDING SETTINGS
# ===========================================

# Embedding provider: "ollama" or "google"
EMBEDDING_PROVIDER=ollama

# Google API key (for Google embeddings)
GOOGLE_API_KEY=
