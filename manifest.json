{
  "manifest_version": 3,
  "name": "AI Interview Coach - AI Assistant",
  "version": "1.0.0",
  "description": "Real-time AI interview coaching for Google Meet and Microsoft Teams.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://teams.microsoft.com/*",
    "https://teams.live.com/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*"
      ],
      "js": [
        "src/utils/constants.js",
        "src/utils/storage.js",
        "src/content/meet-captions.js",
        "src/content/sidebar.js",
        "src/content/content-script.js"
      ],
      "css": [
        "src/content/sidebar.css"
      ]
    },
    {
      "matches": [
        "https://teams.microsoft.com/*",
        "https://teams.live.com/*"
      ],
      "js": [
        "src/utils/constants.js",
        "src/utils/storage.js",
        "src/content/teams-captions.js",
        "src/content/sidebar.js",
        "src/content/content-script.js"
      ],
      "css": [
        "src/content/sidebar.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/sidebar.html",
        "assets/*"
      ],
      "matches": [
        "https://meet.google.com/*",
        "https://teams.microsoft.com/*",
        "https://teams.live.com/*"
      ]
    }
  ]
}